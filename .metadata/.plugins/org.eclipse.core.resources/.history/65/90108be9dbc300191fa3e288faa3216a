package p367_3;

public class Printer {

	private static Printer printer=null;  // 프린터 객체 선언
	private int counter;
	
	public static Printer getPrinter() {
		if(printer==null) {
			try {
				Thread.sleep(1);				
			}catch(InterruptedException e) {}
			
			printer=new Printer();
		}		
		return printer;
	}

	

	public void print(String str) {
		counter++;
		System.out.println(str+counter);
		
	}

}
